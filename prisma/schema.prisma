generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Or your preferred database
  url      = env("DATABASE_URL")
}

model Post {
  id    Int    @id @default(autoincrement())
  title String
  body  String
}

model Image {
  id        Int      @id @default(autoincrement())
  ucareId   String   @unique
}

model Ticket {
  id        Int      @id @default(autoincrement())
  email     String
  subject   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}